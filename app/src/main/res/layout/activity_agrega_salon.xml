<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregaSalonActivity">

    <ScrollView
        android:layout_width="377dp"
        android:layout_height="606dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTituloSalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Salon"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa el Nombre del Salon" />

            <TextView
                android:id="@+id/textViewUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa la Ubicacion" />

            <TextView
                android:id="@+id/textViewEdificio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edificio"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edificio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa el Edificio" />


            <Button
                android:id="@+id/crear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>